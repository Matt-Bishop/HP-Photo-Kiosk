package hp.pk;

import java.io.File;
import java.io.IOException;

import android.content.Context;
import android.graphics.Bitmap;
import android.graphics.BitmapFactory;
import android.view.View;
import android.view.ViewGroup;
import android.widget.BaseAdapter;
import android.widget.Gallery;
import android.widget.ImageView;


public class ImageAdapter extends BaseAdapter {
	private String[] selectedIMGs;
	private Context myContext;
	
	public ImageAdapter(Context c)
	{
		this.myContext=c;
	}
	public void loadIMGs(String[] IMGs)
	{
		selectedIMGs= new String[IMGs.length];
	}
		
	@Override
	public int getCount() {
		// TODO Auto-generated method stub
		return selectedIMGs.length;
	}

	@Override
	public Object getItem(int position) {
		// TODO Auto-generated method stub
		return position;
	}

	@Override
	public long getItemId(int position) {
		// TODO Auto-generated method stub
		return position;
	}

	@Override
	public View getView(int position, View convertView, ViewGroup parent) {
		// TODO Auto-generated method stub
		ImageView i = new ImageView(this.myContext);
			for(int count=0;count<selectedIMGs.length;count++)
    	 	{
    	 		File imageFile = new File(selectedIMGs[count].toString());
    	 		if(imageFile.exists())
    	 		{
    	 			Bitmap myBitmap = BitmapFactory.decodeFile(selectedIMGs[count].toString());
    	 			i.setImageBitmap(myBitmap);
       	 		}
    	 	}
			i.setScaleType(ImageView.ScaleType.FIT_CENTER);
			i.setLayoutParams(new Gallery.LayoutParams(150,150));
		return i;
	}

}
